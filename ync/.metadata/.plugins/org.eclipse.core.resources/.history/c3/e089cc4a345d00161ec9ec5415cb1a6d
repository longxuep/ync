package com.example.test;

import java.sql.Date;
import java.text.SimpleDateFormat;
import java.util.ArrayList;

import android.app.Activity;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.View.OnClickListener;
import android.view.ViewGroup;
import android.view.ViewGroup.MarginLayoutParams;
import android.widget.BaseAdapter;
import android.widget.ExpandableListView;
import android.widget.ExpandableListView.OnChildClickListener;
import android.widget.ListView;
import android.widget.TextView;


public class Test2Activity extends Activity {
	private ListView lsitview_v1;
	private ArrayList<Message> list;
	private ListAdapter adapter;
	private int totalHeightCat=0;
	private ShowDialog showDialog;
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_test2);
        lsitview_v1=(ListView)findViewById(R.id.lsitview_v1);
        list = new ArrayList<Message>();
		SimpleDateFormat formatter = new SimpleDateFormat("yyyy-MM-dd HH:mm");
		for (int i = 0; i < 10; i++) {
			Date curDate = new Date(System.currentTimeMillis());// 获取当前时间
			Message m = new Message();
			m.setTitle("课节" + i);
			m.setTime(formatter.format(curDate));
			list.add(m);
		}
		adapter=new ListAdapter(list);
		lsitview_v1.setAdapter(adapter);
		adapter.notifyDataSetChanged();
		
    }
    class ListAdapter extends BaseAdapter {
		ArrayList<Message> list;

		public ListAdapter(ArrayList<Message> list) {
			this.list = list;
		}

		@Override
		public int getCount() {
			return list.size();
		}

		@Override
		public Object getItem(int position) {
			return list.get(position);
		}

		@Override
		public long getItemId(int position) {
			return position;
		}

		@Override
		public View getView(int position, View convertView, ViewGroup parent) {
			ViewHolder viewHolder = null;
			if (convertView == null) {
				convertView = LayoutInflater.from(parent.getContext()).inflate(
						R.layout.test2_listview_item, null);
				viewHolder = new ViewHolder();
				viewHolder.tv_v1 = (TextView) convertView
						.findViewById(R.id.tv_v1);
				viewHolder.tv_v3 = (TextView) convertView
						.findViewById(R.id.tv_v3);
				
				convertView.setTag(viewHolder);
			} else {
				viewHolder = (ViewHolder) convertView.getTag();
			}
			if (list.get(position) != null) {
				viewHolder.tv_v1
						.setText(list.get(position).getTitle() != null ? list
								.get(position).getTitle().toString() : "");
				viewHolder.tv_v3.setOnClickListener(new oncktv());
			}

			return convertView;
		}

		public class ViewHolder {
			private TextView tv_v1,tv_v3;
		}
	}
    class oncktv implements OnClickListener{

		@Override
		public void onClick(View v) {
			if(v!=null){
				showDialog=new ShowDialog(this);
			}
		}

		
    	
    }

}
