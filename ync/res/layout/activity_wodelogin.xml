<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/xiangcundingwei_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="&lt;返回"
            android:textColor="@color/yzc_textcolor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.88"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="登  录 "
            android:textColor="@color/yzc_textcolor"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wode_tx" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageView
        android:id="@+id/financing_out_tab_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/financing_tab_line"
        android:background="@color/financing_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h48"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_zhanghao"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/zhanghao_ico" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="@dimen/d16"
            android:textSize="14sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <ImageView
        android:id="@+id/financing_out_tab_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/financing_tab_line"
        android:background="@color/financing_green" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h48"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
            android:id="@+id/img_mima"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mima_ico" />

            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:background="@color/transparent"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/d16"
                android:textSize="14sp" />
        </LinearLayout>

    <ImageView
        android:id="@+id/financing_out_tab_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/financing_tab_line"
        android:background="@color/financing_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
"

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:gravity="left"
                android:text="忘记密码？"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="快速注册"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:gravity="center" >

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="@dimen/d16"
            android:background="@drawable/btn_green"
            android:text="@string/user_btn_login"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
    
</LinearLayout>
