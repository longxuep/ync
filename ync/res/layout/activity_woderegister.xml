<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_96px"
        android:background="@drawable/header_bg" >

        <TextView
            android:id="@+id/xiangcundingwei_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableLeft="@drawable/btn_back"
            android:text=" 返回"
            android:textColor="@color/yzc_textcolor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="注  册 "
            android:textColor="@color/yzc_textcolor"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/financing_out_tab_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/financing_tab_line"
        android:background="@color/financing_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_96px"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/img_zhanghao"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+86" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="@dimen/d16"
            android:textSize="14sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <ImageView
        android:id="@+id/financing_out_tab_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/financing_tab_line"
        android:background="@color/financing_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_96px"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:background="@color/transparent"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/d16"
            android:textSize="14sp" />

        <Button
            android:id="@+id/getyzm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_green"
            android:text="获取验证码" />
    </LinearLayout>

    <ImageView
        android:id="@+id/financing_out_tab_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/financing_tab_line"
        android:background="@color/financing_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h48"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:background="@color/transparent"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/d16"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/financing_out_tab_line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/financing_tab_line"
        android:background="@color/financing_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_weight="953.85"
        android:gravity="center"
        android:orientation="vertical" >
"

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《云中村用户注册协议》" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="@dimen/d16"
            android:background="@drawable/btn_green"
            android:text="@string/user_btn_regster"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
    
</LinearLayout>
