<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_96px"
        android:background="@drawable/header_bg" >

        <TextView
            android:id="@+id/xiangcun_dingwei"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="@dimen/_20px"
            android:text="定位中>"
            android:textColor="@color/yzc_textcolor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/xiangcun_search"
            android:layout_width="@dimen/_96px"
            android:layout_height="@dimen/_96px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:padding="@dimen/_20px"
            android:src="@drawable/xiangcun_search" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300px"
                android:layout_margin="@dimen/_10px"
                android:background="@drawable/jishi_xcnf"
                android:gravity="center_horizontal" >

                <com.alec.ync.widget.LoopViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <LinearLayout
                    android:id="@+id/ll_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_14px"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal" >
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1px"
                android:background="#696969" />

            <GridView
                android:id="@+id/item_gview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_340px"
                android:horizontalSpacing="@dimen/_10px"
                android:numColumns="2"
                android:padding="@dimen/_10px"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/_10px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1px"
                android:background="#696969" />

            <ListView
                android:id="@+id/item_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_20px"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>