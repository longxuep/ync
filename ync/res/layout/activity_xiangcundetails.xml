<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:background="@drawable/jishi_nhyj" >

        <ImageView
            android:id="@+id/_bj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/jishi_nhyj" />

        <ImageView
            android:id="@+id/_back"
            android:layout_width="@dimen/_96px"
            android:layout_height="@dimen/_96px"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="@dimen/_20px"
            android:src="@drawable/btn_back" />
        
        
        <ImageView
            android:id="@+id/_share"
            android:layout_width="@dimen/_96px"
            android:layout_height="@dimen/_96px"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="@dimen/_20px"
            android:src="@drawable/share" />

        <ImageView
            android:id="@+id/xiangcun_collection"
            android:layout_width="@dimen/_96px"
            android:layout_height="@dimen/_96px"
            android:layout_toLeftOf="@+id/_share"
            android:gravity="center_vertical"
            android:padding="@dimen/_20px"
            android:src="@drawable/icon_like" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/xiangcun_bg2"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_20px"
            android:paddingRight="@dimen/_20px"
            android:paddingTop="@dimen/_20px" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="某某村"
                android:textColor="@color/white"
                android:textSize="@dimen/_48px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="@dimen/_30px"
                        android:layout_height="@dimen/_60px"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/location" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/imageView1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="某某村"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_28px" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2px"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20px"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/view_huodong"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:src="@drawable/xiangcun_stretch" />

                        <TextView
                            android:id="@+id/tv_huodong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="活动"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_meishi"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:src="@drawable/xiangcun_cate" />

                        <TextView
                            android:id="@+id/tv_meishi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="美食"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_techan"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:src="@drawable/xiangcun_speciality" />

                        <TextView
                            android:id="@+id/tv_techan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="特产"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_mingsu"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:src="@drawable/xiangcun_hostel" />

                        <TextView
                            android:id="@+id/tv_mingsu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="民宿"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/view_zhixun"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:src="@drawable/xiangcun_message" />

                        <TextView
                            android:id="@+id/tv_zhixun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="资讯"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    
                </LinearLayout>                
                
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>