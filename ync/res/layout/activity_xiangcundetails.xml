<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:background="@drawable/jishi_lyzq" >

        <ImageView
            android:id="@+id/xiangcun_back"
            android:layout_width="@dimen/_96px"
            android:layout_height="@dimen/_96px"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="@dimen/_20px"
            android:src="@drawable/btn_back" />

        <ImageView
            android:id="@+id/xiangcun_share"
            android:layout_width="@dimen/_96px"
            android:layout_height="@dimen/_96px"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="@dimen/_20px"
            android:src="@drawable/xiangcun_share" />

        <ImageView
            android:id="@+id/xiangcun_collection"
            android:layout_width="@dimen/_96px"
            android:layout_height="@dimen/_96px"
            android:layout_toLeftOf="@+id/xiangcun_share"
            android:gravity="center_vertical"
            android:padding="@dimen/_20px"
            android:src="@drawable/xiangcun_collect" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/xiangcun_bg2"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_20px"
            android:paddingRight="@dimen/_20px"
            android:paddingTop="@dimen/_20px" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="某某村"
                android:textColor="@color/white"
                android:textSize="@dimen/_48px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="某某村"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_28px" />

                    <ImageView
                        android:id="@+id/details_picture"
                        android:layout_width="@dimen/_40px"
                        android:layout_height="@dimen/_40px"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/_5px"
                        android:src="@drawable/jishi_normal" />

                    <ImageView
                        android:id="@+id/details_camera"
                        android:layout_width="@dimen/_40px"
                        android:layout_height="@dimen/_40px"
                        android:layout_marginRight="@dimen/_20px"
                        android:layout_toLeftOf="@+id/details_picture"
                        android:padding="@dimen/_5px"
                        android:src="@drawable/jishi_normal" />

                    <ImageView
                        android:id="@+id/details_location"
                        android:layout_width="@dimen/_40px"
                        android:layout_height="@dimen/_40px"
                        android:layout_marginRight="@dimen/_20px"
                        android:layout_toLeftOf="@+id/details_camera"
                        android:padding="@dimen/_5px"
                        android:src="@drawable/jishi_normal" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2px"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/view_cunli"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:background="@drawable/xiangcun_index" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="村里" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_daohang"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:background="@drawable/xiangcun_location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="导航" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_huodong"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:background="@drawable/xiangcun_stretch" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="活动" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_hudong"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:background="@drawable/xiangcun_message" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="互动" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/view_meijing"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:background="@drawable/xiangcun_beauty" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="美景" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_meishi"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:background="@drawable/xiangcun_cate" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="美食" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_techan"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:background="@drawable/xiangcun_speciality" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="特产" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_mingsu"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/_60px"
                            android:layout_height="@dimen/_60px"
                            android:layout_gravity="center"
                            android:background="@drawable/xiangcun_hostel" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="民宿" />
                    </LinearLayout>
                </LinearLayout>                
                
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>