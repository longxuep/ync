<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="@dimen/_72px"
        android:layout_height="@dimen/_72px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:background="@drawable/bg_list_item_trans"
        android:src="@drawable/list_btn_add" />

    <ImageView
        android:id="@+id/img_minus"
        android:layout_width="@dimen/_72px"
        android:layout_height="@dimen/_72px"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:background="@drawable/bg_list_item_trans"
        android:src="@drawable/list_btn_reduce" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="0"
        android:textColor="#ff5959"
        android:textSize="@dimen/_30px" />
    
    <TextView
        android:id="@+id/tv_sell_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="已售完"
        android:textColor="#c5c4c4"
        android:visibility="gone"
        android:textSize="@dimen/_30px" />

</RelativeLayout>